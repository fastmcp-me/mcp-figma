{
  "name": "@jayarrowz/mcp-figma",
  "version": "0.6.8",
  "description": "MCP server for figma",
  "license": "MIT",
  "author": "JayArrowz (https://github.com/JayArrowz)",
  "homepage": "https://github.com/JayArrowz/mcp-figma",
  "bugs": "https://github.com/JayArrowz/mcp-figma/issues",
  "type": "module",
  "bin": {
    "mcp-figma": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "generate-api": "npx swagger-typescript-api -p openapi.yaml -o ./src/api/ --axios",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "axios": "^1.8.4",
    "axios-retry": "^4.5.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.2"
  }
}
